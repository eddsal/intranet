{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Users Administration</h1>
    <a href="{{ path('user_administration_index') }}">Students</a>
    <a href="{{ path('user_teacher_administration_index') }}">Teachers</a>
    <a href="{{ path('user_admin_administration_index') }}">Admins</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.date ? user.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_administration_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_administration_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_administration_new') }}">Create new</a>
{% endblock %}
