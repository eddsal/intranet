{% extends 'base.html.twig' %}

{% block title %}Student Place{% endblock %}

{% block body %}

    <h1>My Grade</h1>

    {% if grades is not empty %}
        <table border="">
            <thead>
                <tr>
                    <th>subject</th>
                    <th>grade</th>
                    <th>comment</th>
                </tr>
            </thead>
            {% for grade in grades %}
                <tr>
                    <td>
                        {{ grade.subject }}
                    </td>
                    <td>
                        {{ grade.grade }}
                    </td>
                    <td>
                        {{ grade.comment }}
                    </td>
                </tr>
            {% endfor %}
        </table>
        <p>Average grade : {{ average }}</p>
    {% else %}
        <p>You have no grade yet</p>
    {% endif %}


{% endblock %}
