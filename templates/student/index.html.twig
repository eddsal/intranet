{% extends 'base.html.twig' %}

{% block title %}Student Place{% endblock %}

{% block body %}

    <h1>Student Place!</h1>

    <h2>My subject</h2>

    {% if mySubjects is not empty %}
        <ul>
            {% for subject in mySubjects %}
                <li><a href="">{{ subject.name }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>You are registered in 0 subjects</p>
    {% endif %}

    {% if subjects is not empty %}
        <h2>All Subjects</h2>
        <ul>
            {% for subject in subjects %}
                <li>{{ subject.name }} <a href="{{ path('student_register', {'id': subject.id}) }}">register</a></li>
            {% endfor %}
        </ul>
    {% endif %}


{% endblock %}
